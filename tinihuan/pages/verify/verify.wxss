/* pages/verify/verify.wxss */

.tips{
  padding: 20rpx;
  font-size: .8rem;
  border-bottom: 1rpx solid #ddd;
}
.main .title{
  font-size: .8rem;
  line-height: 2;
}
.main .title .error{
  background-color: #007aff;
  padding: 0 20rpx;
  color: #fff;
  line-height: 2;
  border-radius: 4rpx;
}
.main .title icon{
  vertical-align: middle;
  margin-right: 6rpx;
  position: relative;
  top: -4rpx;
}
.main .cont{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 1rem;
}
.main .cont .eg-img,
.main .cont .take-img{
  width: 49%;
  padding-top: 33.25%;
  position: relative;
  margin-bottom: .5rem;
}
.main .cont .eg-img image,
.main .cont .take-img image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}
.take-img{
  background: url("data:image/jpg;base64,") #007aff center center no-repeat;
  background-size: 100%;
}
.take-img .txt{
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -1rem;
  text-align: center;
  width: 100%;
  color:#fff;
}

.layerWrap{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.3);
}
.layer{
  position: absolute;
  top: 20%;
  left: 50%;
  width: 80%;
  margin-left: -40%;
  background-color: #fff;

}
.layer image{
  width: 100%;
}
.layer .title{
  height: 3rem;
  line-height: 3rem;
  text-align: center;
}